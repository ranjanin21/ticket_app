<h3> Book ticket </h3>

<%= form_for @ticket do |f| %>

       <label>Booking Date</label><br/>
       <%= f.text_field :booking_date, :value => Date.today, readonly: true, required: true %><br/><br/>

       <label>Journey Date</label><br/>
       <%= f.date_field :journey_date, required: true %><br/><br/>

       <label>From Place</label><br/>
       <%= f.text_field :from_place, required: true  %><br/><br/>

       <label>To Place</label><br/>
       <%= f.text_field :to_place, required: true  %><br/><br/>

       <%= f.submit "Submit" %>
       <%= f.hidden_field :customer_id, :value => current_customer.id %>

<% end %>

<hr>
<%= link_to "Profile", customer_path(current_customer.id) %>